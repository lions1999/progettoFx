                       style="-fx-background-color: #fff;" text="Or" textAlignment="CENTER" textFill="#5b5a5a">
                    <font>
                        <Font name="Segoe UI" size="18.0"/>
                    </font>
                </Label>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Pane>
        <Button fx:id="btnSignup" mnemonicParsing="false" onAction="#onSignupClick" prefHeight="40.0"
                prefWidth="420.0" stylesheets="@fullpackstyling.css" text="Sign up">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
