    <Label alignment="CENTER" layoutX="842.0" layoutY="612.0" prefHeight="23.0" prefWidth="93.0" text="DOWNLOAD APP"
           textFill="#a6b1cc" AnchorPane.bottomAnchor="14.799999999999955">
        <font>
            <Font name="Segoe UI" size="12.0"/>
        </font>
    </Label>
</AnchorPane>
